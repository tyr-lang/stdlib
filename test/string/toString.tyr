type toString {
  with tyr.io.System.out
  with StringEQR.equals
  with to := tyr.string.toString

  type def check(number : int, expected : StringLiteral) {
    var s = to(number)
    val v = s.view()
    out.put(v)
    "\n"!!;
    delete v
    val r = equals(expected, s)
    delete s
    r  
  }

  test "int 0" {
    check(0,"0")
  }

  test "int 1" {
    check(1,"1")
  }

  test "int large" {
    check(123456789,"123456789")
  }

  test "int neg" {
    check(-31337,"-31337")
  }
}
